<%= turbo_frame_tag dom_id(message) do %>
  <div class="row row-cols-2 py-2">
    <div class="col-10">
      <%= message.body %>
    </div>
    <div class="col-2 text-end">
      <span class="text-muted small">
        <!-- # TODO: on hover change to delete link -->
        <%= message.updated_at.strftime("%-I:%M") %>
      </span>
    </div>
  </div>
<% end %>
