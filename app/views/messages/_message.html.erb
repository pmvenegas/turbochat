<%= turbo_frame_tag dom_id(message) do %>
  <div class="row row-cols-2 py-2"
       data-controller="message"
       data-action="mouseenter->message#show_controls mouseleave->message#hide_controls">
    <div class="col-10">
      <%= message.body %>
    </div>
    <div class="col-2 text-end">
      <span class="text-muted small" data-message-target="info">
        <%= message.updated_at.strftime("%-I:%M") %>
      </span>
      <span class="d-none" data-message-target="controls">
        <% # TODO: add edit %>
        <%= link_to message_url(message),
            data: {
              turbo_method: :delete,
              turbo_confirm: 'Are you sure?'
            } do %>
          <i class="bi bi-trash text-danger"></i>
        <% end %>
      </span>
    </div>
  </div>
<% end %>
